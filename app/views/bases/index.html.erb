<% provide(:title, "拠点一覧") %>
<h1>拠点一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-condensed table-bordered" id="table-users">
      <thead>
          <tr>
            <th></th>
            <th></th>
            <th>拠点番号</th>
            <th>拠点名</th>
            <th>勤怠種類</th>
          </tr>
        </thead>
        <% @bases.each do |base| %>
          <tr>
            <td><%= link_to "修正",  edit_basis_path(base), class: "btn btn-primary" %></td>
            <td><%= link_to "削除", base, method: :delete, data:{ confirm: '本当に削除しますか？'},
                                                           class: "btn btn-primary" %></td>
            <td><%= base.base_number %></td>
            <td><%= base.name %></td>
            <td><%= base.base_type %></td>
          </tr>
        <% end %>
    </div>
  </div>
</div>

<div class="row">
  <%= link_to "拠点情報の追加", new_basis_path, class: "btn btn-primary" %>
</div>