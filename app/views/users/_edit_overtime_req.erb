<!--モーダルウィンドウ　表示確認のための、仮の記述-->

<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @user, remote: true) do |f| %>
    <%= render partial: 'shared/error_messages', locals: {obj: @user} %>
 
      
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">【残業申請】</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    
      <div class="modal-body">
        <div class="form-group field">
         <%= f.label :name, class:"form-control-label"%>
         <%= f.text_field :name, id: :user_name, class:"form-control" %>
        </div>
      </div>
      
      <div class="modal-footer actions">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit class:"btn btn-primary"%>
      </div>
      
    <% end %>
  </div>
</div>